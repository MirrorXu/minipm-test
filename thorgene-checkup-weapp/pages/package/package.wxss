.page{
  padding-bottom: 80rpx;
}
.basis_box{
  border-bottom: 1rpx solid #d7d7d7;
}
.title_name{
  width: 630rpx;
  height: 122rpx;
  line-height: 122rpx;
  border-bottom: 1rpx solid #d7d7d7;
  margin: 0 auto;
  position: relative;
  padding: 0 40rpx;
  font-size: 32rpx;
  color: #333;
}
.title_name image{
  width: 8rpx;
  height: 38rpx;
  display: block;
  position: absolute;
  top: 50%;
  left: 20rpx;
  margin-top: -19rpx;
}
.label_box{
  width: 710rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
  border-bottom: 1rpx solid #d7d7d7;
}
.label_box:last-child{
  border-bottom: 0;
}
.radio{
  padding: 30rpx 0 30rpx 0rpx; 
  display: block;
  font-size: 34rpx;
  color: #333;
  position: relative;
}
.radio:last-child{
  border-bottom: none;
}
.radio .txt_view{
  width: 520rpx;
  margin-left: 80rpx;
}
.radio .txt_view text{
  font-size: 34rpx;
  color: #666;
  line-height: 42rpx;
}
.radio .txt_view text.packageName{
  overflow: hidden;
  text-overflow: ellipsis;
  /* display: -webkit-box; */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.radio .txt_view text.count{
  color: #999;
  display: inline-block;
}
.image_view{
  width: 60rpx;
  height: 80rpx;
  padding: 0 25rpx;
  display: block;
}
.image_view text{
  width: 60rpx;
  line-height: 36rpx;
  font-size: 28rpx;
  color: #2a88e9;
  display: block;
}
.radio .select{
  width: 40rpx;
  height: 40rpx;
  display: block;
  position: absolute;
  top: 50%;
  left: 30rpx;
  margin-top: -20rpx;
}
.radio radio{
  width: 40rpx;
  height: 40rpx;
  opacity: 0;
  position: absolute;
  top: 50%;
  left: 30rpx;
  margin-top: -20rpx;
}
.btnBox{
  width: 100%;
  height: 130rpx;
  padding-top: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.btnBox button.submitBtn{
  width: 660rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto;
  display: block;
}
.hide{
  display: none;
}