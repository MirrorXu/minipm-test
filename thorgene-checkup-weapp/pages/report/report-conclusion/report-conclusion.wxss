.head-box{
  width: 630rpx;
  margin: 30rpx auto;
  padding: 60rpx 40rpx;
  background: linear-gradient(#3cb1ed, #1e80e4);
  background: -webkit-linear-gradient(#3cb1ed, #1e80e4);
  border-radius: 20rpx;
}
.head-box .name{
  height: 37rpx;
  font-size: 36rpx;
  color: #fff;
}
.head-box .name view{
  height: 36rpx;
  width: 2rpx;
  color: #fff;
  margin: 0 20rpx;
  display: inline-block;
}
.head-box .address, .head-box .date{
  font-size: 34rpx;
  line-height: 36rpx;
  color: #fff;
  margin-top: 50rpx;
  display: flex;
  justify-content: flex-start;
}
.head-box .address image{
  width: 34rpx;
  height: 36rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.head-box .date image{
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.content-box{
  width: 750rpx;
  padding-bottom: 150rpx;
}
.content-box .item view.title{
  width: 100%;
  height: 88rpx;
  background: #f2f2f2;
  display: flex;
  justify-content: flex-start;
}
.content-box .item view.title image{
  width: 8rpx;
  height: 38rpx;
  display: inline-block;
  margin: 25rpx 20rpx 0 40rpx;
}
.content-box .item view.title text{
  font-size: 36rpx;
  color: rgb(51, 51, 51);
  line-height: 88rpx;
}
.content-box .item2 view.title{
  position: relative;
}
.content-box .item view.title text.num{
  color: rgb(255, 75, 101);
  position: absolute;
  right: 50rpx;
}
.content-box .item .txt-msg{
  font-size: 32rpx;
  color: rgb(102, 102, 102);
  line-height: 50rpx;
  padding: 40rpx;
  display: block;
  word-break: break-all;
}
.list-box .item-box{
  border-bottom: 1rpx solid #f2f2f2;
}
.list-box .item-box .item-title{
  background: #f2f2f2;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  display: inline-block;
  font-size: 34rpx;
  color: rgb(51, 51, 51);
  margin: 50rpx 40rpx 10rpx;
}
.list-box .item-box .item-list{
  border-bottom: 1rpx solid #f2f2f2;
}
.list-box .item-box .item-list .item{
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  width: 660rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #f2f2f2; 
  padding: 40rpx 20rpx;
}
.list-box .item-box .item-list .item:last-child{
  border-bottom: 0;
}
.list-box .item-box .item-list .item .name{
  width: 50%;
  font-size: 32rpx;
  color: rgb(102, 102, 102);
}
.list-box .item-box .item-list .item .data{
  width: 50%;
}
.list-box .item-box .item-list .item .data view{
  text-align: right;
}
.list-box .item-box .item-list .item .data text.scope{
  display: block;
  text-align: right;
  color: rgb(102, 102, 102);
}
.list-box .item-box .item-list .item .data view image{
  width: 21rpx;
  height: 27rpx;
  margin-left: 20rpx;
}
.list-box .item-box .item-list .item-txt{
  width: 660rpx;
  padding: 30rpx 20rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #f2f2f2;
}
.list-box .item-box .item-list .item-txt:last-child{
  border-bottom: 0;
}
.list-box .item-box .item-list .item-txt .name{
  font-size: 32rpx;
  color: rgb(102, 102, 102);
  display: block;
  margin-bottom: 20rpx;
}
.list-box .item-box .item-list .item-txt .data{
  font-size: 34rpx;
  color: rgb(51, 51, 51);
  line-height: 50rpx;
}
.list-box .item-box .item-list-txt{
  border-bottom: 0;
}
.btn-box{
  position: fixed;
  bottom: 0;
  width: 710rpx;
  height: 110rpx;
  padding: 20rpx 20rpx 0;
  background: #fff;
  display: flex;
  justify-content: space-around;
  /* box-shadow: 0px 0px 5px rgba(0, 0, 0, .1); */
}
.btn-box view{
  width: 330rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 10rpx;
}
.btn-box view.details{
  background: #2a88e9;
  color: #fff;
}
.btn-box view.consult{
  background: #fff;
  color: #2a88e9;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  border: 1rpx solid #2a88e9;
}
.btn-box button{
  background: rgba(0,0,0,0);
  padding: 0 1rpx;
  margin: 0;
}
.btn-box button::after{
  border: 0;
}
.show{
  display: block;
}
.hide{
  display: none;
}

